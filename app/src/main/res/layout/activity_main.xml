<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.alphalayout.activity.MainActivity">

    <include
        layout="@layout/layout_toolbar" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_list"
        style="@style/CardCommon"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:cardUseCompatPadding="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/material_1" />

        <TextView
            style="@style/TextCommon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ListSample" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_recycler"
        style="@style/CardCommon"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:cardUseCompatPadding="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/material_2" />

        <TextView
            style="@style/TextCommon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="RecyclerSample" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_scroll"
        style="@style/CardCommon"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/material_3" />

        <TextView
            style="@style/TextCommon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ScrollSample" />

    </android.support.v7.widget.CardView>

</LinearLayout>
